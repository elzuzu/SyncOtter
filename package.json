{
    "name":  "syncotter",
    "version":  "1.0.0",
    "description":  "Outil de synchronisation intelligent avec loutre",
    "main":  "main.js",
    "author":  "SyncOtter Team",
    "scripts":  {
                    "start":  "electron .",
                    "build:installer":  "electron-builder --win --x64",
                    "build:portable":  "electron-builder --win --x64 --config.win.target=portable",
                    "build:ultra":  "electron-builder --win --x64 --config.win.target=portable --config.compression=maximum"
                },
    "devDependencies":  {
                            "electron":  "^28.0.0",
                            "electron-builder":  "^24.9.1"
                        },
    "dependencies":  {
                         "fs-extra":  "^11.2.0"
                     },
    "build":  {
                  "appId":  "com.syncotter.app",
                  "productName":  "SyncOtter",
                  "compression":  "maximum",
                  "win":  {
                              "target":  [ "nsis" ],
                              "arch": "x64"
                          },
                  "files":  [
                                "main.js",
                                "splash.html",
                                "!config.json",
                                "!*.md",
                                "!build.*",
                                "!launch.*"
                            ],
                  "extraMetadata":  {
                                        "main":  "main.js"
                                    },
                  "nsis":  {
                               "oneClick":  false,
                               "allowToChangeInstallationDirectory":  true
                           },
                  "portable":  {
                                   "artifactName":  "SyncOtter-Ultra.exe"
                               }
              }
}
