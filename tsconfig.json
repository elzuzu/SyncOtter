{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "./src",
    "strict": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
